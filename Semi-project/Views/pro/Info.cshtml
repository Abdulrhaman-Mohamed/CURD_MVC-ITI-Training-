@model Employee
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/TheFirst.cshtml";
}


<form>
    <div class="row mb-3">
        <label for="name_" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" disabled class="form-control" id="name_" name="name_" value="@Model.name_" '>
        </div>
    </div>
    <div class="row mb-3">
        <label for="ID" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
            <input type="number" disabled class="form-control" id="ID" name="ID" value="@Model.ID">
        </div>
    </div>
    <div class="row mb-3">
        <label for="age" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input type="number" disabled class="form-control" id="age" name="age" value="@Model.age">
        </div>
    </div>
    <div class="row mb-3">
        <label for="salary" class="col-sm-2 col-form-label">Salary</label>
        <div class="col-sm-10">
            <input type="number" disabled class="form-control" id="salary" name="salary" value="@Model.salary">
        </div>
    </div>
    <div class="row mb-3">
        <label for="Dept_ID" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <input type="text" disabled class="form-control" id="Dept_ID" name="Dept_ID" value="@(Model.Dept_ID == null ? "No Departement available" : Model.Department.Dept_Name )" />
        </div>
    </div>



</form>
